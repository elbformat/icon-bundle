{#
    Use this template to render a single icon (for backend and frontend)

    @var icon ?string
    @var iconset string
#}
{% if icon is not null %}
    {% if "set2" == iconset %}
        <img src="{{ asset("build/images/icons/") ~ icon  }}" />
    {% else %}
        <i class="icon-{{ icon }}"></i>
    {% endif %}
{% endif %}